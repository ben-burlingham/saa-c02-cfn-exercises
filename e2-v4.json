{
  "Resources": {
    "HelloBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        },
        "BucketName": { "Fn::Sub": [
          "hello-bucket-${Suffix}",
          {"Suffix": { "Ref": "UniqueSuffix" }}
        ]},
        "ReplicationConfiguration": {
          "Role": { "Fn::GetAtt": [ "HelloRole", "Arn" ] },
          "Rules": [{
            "Destination" : { "Bucket": { "Fn::GetAtt": [ "HelloReplicate", "Arn" ] } },
            "Status" : "Enabled"
          }]
        },
        "VersioningConfiguration": { "Status": "Enabled" }
      }
    },
    "HelloBucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "Properties": {
        "Bucket": { "Ref": "HelloBucket" },
        "PolicyDocument": {
          "Statement": {
            "Principal": "*",
            "Action": "*",
            "Effect": "Allow",
            "Resource": {
              "Fn::Sub": [
                "arn:aws:s3:::${TargetBucketName}/*",
                {"TargetBucketName": { "Ref": "HelloBucket" }}
              ]
            }
          }
        }
      }
    },
    "HelloReplicate": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "AccessControl": "Private",
        "BucketName": { "Fn::Sub": [
          "hello-replicate-${Suffix}",
          {"Suffix": { "Ref": "UniqueSuffix" }}
        ]},
        "VersioningConfiguration": { "Status": "Enabled" }
      }
    },
    "HelloRole": {
      "Type" : "AWS::IAM::Role",
      "Properties" : {
        "AssumeRolePolicyDocument" : {
          "Statement": {
            "Effect": "Allow",
            "Principal": { "Service": "s3.amazonaws.com" },
            "Action": [ "sts:AssumeRole" ]
          }
        },
        "Description" : "Role created via CloudFormation",
        "ManagedPolicyArns" : [ "arn:aws:iam::aws:policy/AdministratorAccess" ],
        "RoleName": { "Fn::Sub": [
          "hello-role-${Suffix}",
          {"Suffix": { "Ref": "UniqueSuffix" }}
        ]}
      }
    }
  },
  "Parameters": {
    "UniqueSuffix": {
      "AllowedPattern": "^[\\d\\w]{5,}$",
      "Type": "String",
      "Description": "Suffixed identifier to provide uniqueness on all names"
    }
  },
  "Outputs" : {
    "HelloBucketArn": {
      "Description": "HelloBucket ARN",
      "Value": { "Fn::GetAtt": [ "HelloBucket", "Arn" ] }
    },
    "HelloReplicateArn": {
      "Description": "HelloReplicate ARN",
      "Value": { "Fn::GetAtt": [ "HelloReplicate", "Arn" ] }
    },
    "HelloRoleArn": {
      "Description": "HelloRole ARN",
      "Value": { "Fn::GetAtt": [ "HelloRole", "Arn" ] }
    }
  }
}
